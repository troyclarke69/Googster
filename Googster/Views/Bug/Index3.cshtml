@model IEnumerable<Googster.ViewModels.BugListingModel>

@{
    ViewData["Title"] = "COVID 19 Stats";
}

<h2></h2>
<span class="badge"><h2>Stats</h2></span>
<h2></h2>
<p>
    <a asp-action="DownStats">Get Latest Stats</a>
</p>
@*<p>
        <a asp-action="ViewStats">View Stats</a>
    </p>*@
@*<h2>@model.DownloadDate</h2>*@


<table class="table">
    <thead>
        <tr>
            @*<th>@Html.DisplayNameFor(model => model.DownloadDate)</th>*@
            <th>
                <a asp-controller="Bug" asp-action="Index" asp-route-id="1">
                    @Html.DisplayNameFor(model => model.Country)
                </a>

            </th>
            <th>
                <a asp-controller="Bug" asp-action="Index" asp-route-id="2">
                    @Html.DisplayNameFor(model => model.Cases)
                </a>
            </th>
            <th>
                <a asp-controller="Bug" asp-action="Index" asp-route-id="3">
                    @Html.DisplayNameFor(model => model.TodayCases)
                </a>
            </th>
            <th>
                <a asp-controller="Bug" asp-action="Index" asp-route-id="4">
                    @Html.DisplayNameFor(model => model.Deaths)
                </a>
            </th>
            <th>
                <a asp-controller="Bug" asp-action="Index" asp-route-id="5">
                    @Html.DisplayNameFor(model => model.TodayDeaths)
                </a>
            </th>
            <th>
                <a asp-controller="Bug" asp-action="Index" asp-route-id="6">
                    Cases/M
                </a>
            </th>
            <th>
                <a asp-controller="Bug" asp-action="Index" asp-route-id="7">
                    Deaths/M
                </a>
            </th>
            <th>
                <a asp-controller="Bug" asp-action="Index" asp-route-id="8">
                    Population
                </a>
            </th>
            <th>
                <a asp-controller="Bug" asp-action="Index" asp-route-id="9">
                    Death %
                </a>
            </th>

        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
        <tr>
            @*<td>
        <img src=@item.Flag class="img-url" style="width:180px;height:120px;" />
        @Html.DisplayFor(modelItem => item.Country)
        </td>*@
            @*<td>@Html.DisplayFor(modelItem => item.DownloadDate.Date)</td>*@

            <td>@Html.DisplayFor(modelItem => item.Country)</td>
            <td>@Html.DisplayFor(modelItem => item.CaseStr)</td>
            <td>@Html.DisplayFor(modelItem => item.TodayCases)</td>
            <td>@Html.DisplayFor(modelItem => item.Deaths)</td>
            <td>@Html.DisplayFor(modelItem => item.TodayDeaths)</td>
            <td>@Html.DisplayFor(modelItem => item.CasesPerOneMillion)</td>
            <td>@Html.DisplayFor(modelItem => item.DeathsPerOneMillion)</td>
            <td>@Html.DisplayFor(modelItem => item.PopStr)</td>
            <td>@Html.DisplayFor(modelItem => item.DeathPercentage)</td>

        </tr>
        }
    </tbody>
</table>
